            android:label="@string/app_name"
            android:name=".ui.MainPortal" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".ui.PictureCapture" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".ui.WaterSourceConfimation" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".ui.WaterSampleConfimation" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".ui.ServerSync" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".pref.SetPreferencesActivity" >
             
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".service.TakePicture" >
        </activity>
        <service android:name=".service.ImageUploadService" />
        
        <provider android:name=".db.ImageUploadHistoryProvider"
                  android:authorities="ca.ilanguage.rhok.imageupload.db.ImageUploadHistory" />
    </application>
</manifest>