<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <PreferenceCategory android:title="Settings" >
        <!--the key for these settings come frmo the PreferenceConstants.java file
        they are accessed like this: 
        
        SharedPreferences prefs = getSharedPreferences(PreferenceConstants.PREFERENCE_NAME, MODE_PRIVATE);
		mOutputDir = prefs.getString(PreferenceConstants.OUTPUT_IMAGE_DIRECTORY, "/sdcard/BacteriaCounting/watersamples/");
		mSampleCodeCount = prefs.getInt(PreferenceConstants.PREFERENCE_WATER_SAMPLE_ID, 0);
        -->
        
        <EditTextPreference
            android:defaultValue="AA"
            android:dialogTitle="Enter your code"
            android:key="experimenterId"
            android:persistent="true"
            android:summary="Experimenter who tested sample"
            android:title="Experimenter code" />
        
        <EditTextPreference
            android:defaultValue="13000000AA00000"
            android:dialogTitle="The water sample code is auto-generated, you don't need to edit this."
            android:key="watersampleId"
            android:persistent="true"
            android:summary="Autogenerated TimeStamp ExperimenterInitials SampleCount eg 13000000AA12301"
            android:title="Water Sample ID" />
       <EditTextPreference
            android:defaultValue="/sdcard/BacteriaCounting/watersamples/"
            android:dialogTitle="The directory where images will be saved, you don't need to edit this."
            android:key="ouputdir"
            android:persistent="true"
            android:summary="Output Directory"
            android:title="Output Directory" />
        -->
    </PreferenceCategory>
    <PreferenceCategory android:title="About" >
        <PreferenceScreen android:title="Visit Website" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.rhok.org/solutions/android-image-pattern-recognition-and-upload" />
            <Preference
                android:enabled="false"
                android:selectable="false"
                android:summary="@string/preference_about_summary"
                android:title="@string/preference_about_title" />
            <Preference
                android:enabled="false"
                android:selectable="false"
                android:summary="@string/preference_thanks_summary"
                android:title="@string/preference_thanks_title" />
            <Preference
                android:enabled="false"
                android:selectable="false"
                android:summary="@string/preference_licence_summary"
                android:title="@string/preference_licence_title" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>